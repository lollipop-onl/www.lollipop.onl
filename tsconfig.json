{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "paths": {
      "@/*": ["*"],
      "~/*": ["*"],
      "@@/*": ["*"],
      "~~/*": ["*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/axios",
      "dayjs/plugin/relativeTime"
    ]
  },
  "exclude": ["node_modules"]
}
